@model List<Eticaret.Model.Product>
@{
    ViewData["Title"] = "Ürünler";
}
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ürün adı</th>
            <th>fiyat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Eticaret.Model.Product item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @Html.ActionLink("Düzenle","Edit","Product",new{id=item.Id},new{@class="btn btn-sm btn-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>